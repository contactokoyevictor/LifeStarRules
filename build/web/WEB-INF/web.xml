<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>ScheduleListener</servlet-name>
        <servlet-class>com.novartis.connectors.schedulers.ScheduleListener</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>MOConnector</servlet-name>
        <servlet-class>com.novartis.messaging.connectors.MOConnector</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ScheduleListener</servlet-name>
        <url-pattern>/ScheduleListener</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>getpageelements</servlet-name>
        <servlet-class>com.novartis.connectors.servlets.getpageelements</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getconsumerdetails</servlet-name>
        <servlet-class>com.novartis.connectors.servlets.getconsumerdetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>setconsumerdetails</servlet-name>
        <servlet-class>com.novartis.connectors.servlets.setconsumerdetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>broadcast</servlet-name>
        <servlet-class>com.novartis.connectors.servlets.broadcast</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>mo</servlet-name>
        <servlet-class>com.novartis.connectors.servlets.mo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>mt</servlet-name>
        <servlet-class>com.novartis.connectors.servlets.mt</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>optin</servlet-name>
        <servlet-class>com.novartis.connectors.servlets.optin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>optout</servlet-name>
        <servlet-class>com.novartis.connectors.servlets.optout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getpageelements</servlet-name>
        <url-pattern>/mobileweb/getpageelements</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getconsumerdetails</servlet-name>
        <url-pattern>/mobileweb/getconsumerdetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>setconsumerdetails</servlet-name>
        <url-pattern>/mobileweb/setconsumerdetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>broadcast</servlet-name>
        <url-pattern>/messaging/broadcast</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>mo</servlet-name>
        <url-pattern>/messaging/mo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>mt</servlet-name>
        <url-pattern>/messaging/mt</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>optin</servlet-name>
        <url-pattern>/messaging/optin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>optout</servlet-name>
        <url-pattern>/messaging/optout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MOConnector</servlet-name>
        <url-pattern>/prep/messaging/mo</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
